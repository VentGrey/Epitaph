#!/bin/sh

OPTIONS="\
ðŸŒŽ latam
ðŸ‡ªðŸ‡¸ es
ðŸ‡¬ðŸ‡§ en (intl)"

CHOICE=$(echo "$OPTIONS" | rofi -dmenu -p "Select your keyboard distribution" | awk '{print $2}')

if [ -z "$CHOICE" ]; then
  notify-send "No keyboard selection made."
  exit 0
fi

case $CHOICE in
  latam)
    setxkbmap latam
    ;;
  es)
    setxkbmap es
    ;;
  "en (intl)")
    setxkbmap us -variant intl
    ;;
  *)
    notify-send "Invalid keyboard selection!"
    exit 1
    ;;
esac
